# =================================================================
# Server Connection Settings
# =================================================================
STREAMNET_SERVER_HOST="serverip"
STREAMNET_SERVER_USER="root"
STREAMNET_SERVER_PASSWORD="rootpassword"
STREAMNET_SERVER_PORT="22"

# =================================================================
# GitHub API Settings
# =================================================================
# GitHub personal access token for checking updates (needed for private repos)
# Create a token with 'repo' scope at https://github.com/settings/tokens
GITHUB_API_TOKEN=""

# =================================================================
# Cloudflare API Credentials
# =================================================================
CLOUDFLARE_ROOT_DOMAIN="example.com"
CLOUDFLARE_API_TOKEN="cloudflareApiToken"
CLOUDFLARE_EMAIL="cloudflareEmail"
CLOUDFLARE_API_KEY="cloudflareApiKey"
CLOUDFLARE_ZONE_ID="cloudflareZoneID"
CLOUDFLARE_DEFAULT_TTL="3600"
CLOUDFLARE_IPV4_ADDRESS="serveripv4"
CLOUDFLARE_IPV6_ADDRESS="serveripv6"
CLOUDFLARE_AUTO_CREATE_DNS="true"
CLOUDFLARE_AUTO_CREATE_SUBDOMAIN_DNS="true"
CLOUDFLARE_LOG_DNS_OPERATIONS="true"

# =================================================================
# Application Settings
# =================================================================
# Log level: debug, info, warn, error
APP_LOG_LEVEL="debug"

# Enable simulated mode for development (true/false)
USE_SIMULATED_MODE="false"

# =================================================================
# Path Settings
# =================================================================
SOURCE_BASE_PATH="/home/"
DESTINATION_BASE_PATH="/home/"

# =================================================================
# Virtualmin Settings
# =================================================================
VIRTUALMIN_PORT="10000"
VIRTUALMIN_TEMPLATE="default"
VIRTUALMIN_PLAN="Default"
VIRTUALMIN_DISK_QUOTA="500"
VIRTUALMIN_BANDWIDTH_QUOTA="1000"

# =================================================================
# Development Settings
# =================================================================
# Set to true to enable detailed logging
DEBUG_MODE="true"

# Enable Chrome DevTools in production (true/false)
ENABLE_DEV_TOOLS="false"